

-- #1 CONCESSIONARIA

CREATE DATABASE IF NOT EXISTS concessionaria;
USE concessionaria;

DROP TABLE IF EXISTS venda;
CREATE TABLE IF NOT EXISTS venda (
    IDVenda INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
    valor DECIMAL(8, 2),
    data1 DATE
);

DROP TABLE IF EXISTS veiculo;
CREATE TABLE IF NOT EXISTS veiculo (
    IDVeiculo INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
    nome VARCHAR(30),
    cor VARCHAR(15),
    placa VARCHAR(8) UNIQUE
);

DROP TABLE IF EXISTS modelo;
CREATE TABLE IF NOT EXISTS modelo (
    IDModelo INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
    dataF DATE
);

INSERT INTO venda (valor, data1) VALUES (250.50, '2005-04-12');
SELECT * FROM venda;

INSERT INTO veiculo (nome, cor, placa) VALUES ('Opala', 'Vermelho', 'ABC1234');
SELECT * FROM veiculo;

INSERT INTO modelo (dataF) VALUES ('2025-05-11');
SELECT * FROM modelo;

DROP TABLE IF EXISTS comprador;
CREATE TABLE IF NOT EXISTS comprador (
    id INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
    nome VARCHAR(45),
    telefone VARCHAR(15),
    endereco VARCHAR(40)
);
INSERT INTO comprador (nome, telefone, endereco)
VALUES ('Lobato', '99134448', 'rua12');
SELECT * FROM comprador;

DROP TABLE IF EXISTS marcas;
CREATE TABLE IF NOT EXISTS marcas (
    id INT PRIMARY KEY AUTO_INCREMENT,
    nome VARCHAR(50)
);
INSERT INTO marcas (nome) VALUES ('nomequalquer');
SELECT * FROM marcas;

-- 2#CLUBE D0 LIVRO

DROP DATABASE IF EXISTS ClubeDoLivro;
CREATE DATABASE IF NOT EXISTS ClubeDoLivro;
USE ClubeDoLivro;

DROP TABLE IF EXISTS livro;
CREATE TABLE IF NOT EXISTS livro (
    id INT PRIMARY KEY AUTO_INCREMENT,
    nome VARCHAR(50),
    dataP DATE,
    AreaL VARCHAR(50)
);
INSERT INTO livro (nome, dataP, AreaL) VALUES ('livro1', '2023-04-03', 'terror');
SELECT * FROM livro;


DROP TABLE IF EXISTS aluno;
create table if not exists aluno (id int primary key auto_increment, nome varchar(50), telefone numeric (10) );
INSERT INTO aluno (id,nome,telefone) values (1,'LObato' ,'99134448');
select * from aluno;


DROP TABLE IF EXISTS emprestimo;
create table emprestimo (id int primary key auto_increment, dataDev date, dataEmp date,historico varchar(40));
insert into emprestimo (id,dataDev,dataEmp,historico) values (1,'1489-05-03','1399-06-09','2 Emprestimos');
select * from emprestimo;

-- #3 ESTABELECIMENTO COMERCIAL

create database if not exists estabelecimento;
use estabelecimento;


DROP TABLE IF EXISTS registro;
create table if not exists registro
(id int primary key auto_increment, nome varchar (50),preço varchar(10), quantidade varchar(50));

insert into registro (id,nome,preço,quantidade) values (9,'Lobato', '50','5');
select * from registro;


DROP TABLE IF EXISTS fornecedor;
create table if not exists fornecedor (id int primary key auto_increment, nome varchar(50), telefone varchar(12));
insert into fornecedor (id,nome,telefone) 
values (6, 'Lobato', '9913-4448');
