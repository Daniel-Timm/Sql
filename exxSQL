CREATE DATABASE IF NOT EXISTS concessionaria;
USE concessionaria;

DROP TABLE IF EXISTS venda;
CREATE TABLE IF NOT EXISTS venda (
    IDVenda INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
    valor DECIMAL(8, 2),
    data1 DATE
);

DROP TABLE IF EXISTS veiculo;
CREATE TABLE IF NOT EXISTS veiculo (
    IDVeiculo INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
    nome VARCHAR(30),
    cor VARCHAR(15),
    placa VARCHAR(8) UNIQUE
);

DROP TABLE IF EXISTS modelo;
CREATE TABLE IF NOT EXISTS modelo (
    IDModelo INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
    dataF DATE
);

INSERT INTO venda (valor, data1) VALUES (250.50, '2005-04-12');
SELECT * FROM venda;

INSERT INTO veiculo (nome, cor, placa) VALUES ('Opala', 'Vermelho', 'ABC1234');
SELECT * FROM veiculo;

INSERT INTO modelo (dataF) VALUES ('2025-05-11');
SELECT * FROM modelo;

DROP TABLE IF EXISTS comprador;
CREATE TABLE IF NOT EXISTS comprador (
    id INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
    nome VARCHAR(45),
    telefone VARCHAR(15),
    endereco VARCHAR(40)
);
INSERT INTO comprador (nome, telefone, endereco)
VALUES ('Lobato', '99134448', 'rua12');
SELECT * FROM comprador;

DROP TABLE IF EXISTS marcas;
CREATE TABLE IF NOT EXISTS marcas (
    id INT PRIMARY KEY AUTO_INCREMENT,
    nome VARCHAR(50)
);
INSERT INTO marcas (nome) VALUES ('nomequalquer');
SELECT * FROM marcas;

