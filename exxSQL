DROP DATABASE IF EXISTS ClubeDoLivro;
CREATE DATABASE IF NOT EXISTS ClubeDoLivro;
USE ClubeDoLivro;

DROP TABLE IF EXISTS livro;
CREATE TABLE IF NOT EXISTS livro (
    id INT PRIMARY KEY AUTO_INCREMENT,
    nome VARCHAR(50),
    dataP DATE,
    AreaL VARCHAR(50)
);
INSERT INTO livro (nome, dataP, AreaL) VALUES ('livro1', '2023-04-03', 'terror');
SELECT * FROM livro;

create table if not exists aluno (id int primary key auto_increment, nome varchar(50), telefone numeric (10) );
INSERT INTO aluno (id,nome,telefone) values (1,'LObato' ,'99134448');
select * from aluno;

create table emprestimo (id int primary key auto_increment, dataDev date, dataEmp date,historico varchar(40));
insert into emprestimo (id,dataDev,dataEmp,historico) values (1,'1489-05-03','1399-06-09','2 Emprestimos');
select * from emprestimo;
