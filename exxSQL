-- #4 ARTIGOS CIENTIFICOS

drop database if exists artigo_cientificos;
create database if not exists artigos_cientificos;
use artigos_cientificos;


drop table if exists artigo;
create table if not exists artigo (id int primary key auto_increment, nome varchar(50),resumo varchar (50), palavra_chave varchar(50),autor varchar(50), instituição varchar(50),periodo varchar(50));
insert into artigo (id,nome,resumo,palavra_chave,autor,instituição,periodo) 
values (2,'Livro1', 'Livro de terror', 'terror', 'lobato', 'Senac','2002');
select * from artigo;

create table if not exists palavra_chave (palavras varchar(50));
insert into palavra_chave (palavras) 
value ('terror,animação,ficticio');
select * from palavra_chave;


drop table if exists autores;
create table if not exists autores (id int primary key, nome varchar(50), email varchar(30));
insert into autores (id,nome,email) 
values (1,'Lobato', 'lobato@gmail.com');
select * from autores;


drop table if exists instituição;
create table instituição( id int primary key not null ,nome varchar (50),endereço varchar(50));
insert into instituição (id,nome,endereço) 
values(1,'Senac' , 'Gonçalves-chaves');
select*from instituição;

drop table if exists periodo;
create table periodo (id int primary key not null, nome varchar(50), qualificação varchar(50));
insert into periodo (id,nome,qualificação) 
values (1,'segundo', 'Aprovado');
select * from periodo;







